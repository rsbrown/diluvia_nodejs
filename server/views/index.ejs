<div id="content">
  <div class="info">Welcome to Diluvia!</div> 
<%  if (everyauth.user) { %>
<%    if (everyauth.user._islandZoneId) { %>
    <a href="/edit">Edit your island</a>
<%    } else { %>
    <a href="/create_island">Create your own island</a>
<%    } %>
<%  } %>
  <div id="islands">
    <% for (id in islands) { %>
      <a class="island" href="/play">
        <div class="info"><%=islands[id].getUsername()%>'s Island</div>
        <div class="name">Play Now</div>
      </a>
    <%}%>  
  </div>
</div>
